<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sbs.jhs.at.dao.ArticleDao">
	<select id="getForPrintArticles" resultType="Article">
		SELECT *
		FROM article
		WHERE displayStatus = 1
		ORDER BY id DESC
	</select>

	<select id="getForPrintArticleReplies" resultMap="articleReply">
	    <![CDATA[
		SELECT AR.*,
		M.nickname AS extra__writer
		FROM articleReply AS AR
		INNER JOIN member AS M
		ON AR.memberId = M.id
		WHERE AR.articleId = #{articleId}
		AND AR.displayStatus = 1
		AND AR.id >= #{from}
		ORDER BY AR.id ASC
		]]>
	</select>

	<select id="getForPrintArticleById" resultType="Article">
		SELECT *
		FROM
		article
		WHERE id = #{id}
	</select>

	<insert id="write" useGeneratedKeys="true" keyProperty="id">
		INSERT
		INTO article
		SET regDate = NOW(),
		updateDate = NOW(),
		title = #{title},
		body = #{body}
	</insert>

	<insert id="writeReply" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO articleReply
		SET regDate = NOW(),
		updateDate = NOW(),
		body =
		#{body},
		memberId = #{memberId},
		articleId = #{articleId},
		displayStatus
		= 1
	</insert>

	<delete id="deleteReply">
		<![CDATA[	
		DELETE FROM articleReply
		WHERE id = #{id}
		]]>
	</delete>

	<resultMap type="ArticleReply" id="articleReply">
		<id property="id" column="id" />
		<id property="regDate" column="regDate" />
		<id property="updateDate" column="updateDate" />
		<id property="delDate" column="delDate" />
		<id property="delStatus" column="delStatus" />
		<id property="body" column="body" />
		<id property="memberId" column="memberId" />
		<id property="articleId" column="articleId" />
		<association property="extra" javaType="map">
			<id property="writer" column="extra__writer" />
		</association>
	</resultMap>
</mapper>